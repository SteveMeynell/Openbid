<?xml version="1.0" encoding="UTF-8"?>
<modification>
	<id>Admin PayPal Balance</id>
    <version>2.0</version>
    <author>Rob Crittenden</author>

	<file name="admin/controller/common/column_left.php">
		<operation info="We load the PayPal language and model itself, and set $paypal_balance as the result of getBalance">
			<search position="after"><![CDATA[$this->load->language('common/column_left');]]></search>
			<add><![CDATA[$this->load->language('common/paypal');
			$this->load->model('paypal/paypal');
			$data['paypal_text'] = $this->language->get('paypal_balance');
			$data['paypal_balance'] = $this->model_paypal_paypal->getBalance();]]></add>
		</operation>
	</file>

	<file name="admin/view/template/common/column_left.tpl">
		<operation info="Here we display the balance on the admin header area">
      		<search position="before"><![CDATA[<div id="profile">]]></search>
      		<add><![CDATA[<div style="color:#fff;padding:10px 0px 0px 10px;"><?php echo sprintf("%s: %s", $paypal_text, $paypal_balance); ?></div>]]></add>
    	</operation>
    </file>

</modification>